{% extends 'base.html.twig' %}

{% block title %}Conference Guestbook - {{ conference }}{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-100">
    <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
        <div class="mb-8">
            <h1 class="text-4xl font-bold text-gray-900">{{ conference }} Conference</h1>
            {% if comments|length > 0 %}
                <p class="mt-2 text-lg text-gray-600">{{ comments|length }} comments</p>
            {% endif %}
        </div>

        {% if comments|length > 0 %}
            <div class="space-y-8">
                {% for comment in comments %}
                    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
                        <div class="px-4 py-5 sm:p-6">
                            <div class="flex items-start space-x-4">
                                {% if comment.photofilename %}
                                    <div class="flex-shrink-0">
                                        <img src="{{ asset('uploads/photos/' ~ comment.photofilename) }}" 
                                             alt="Comment photo"
                                             class="h-32 w-32 object-cover rounded-lg shadow-sm" />
                                    </div>
                                {% endif %}
                                <div class="flex-1">
                                    <h4 class="text-lg font-medium text-gray-900">{{ comment.author }}</h4>
                                    <p class="mt-1 text-sm text-gray-500">
                                        {{ comment.createdAt|format_datetime('medium', 'short') }}
                                    </p>
                                    <div class="mt-3 text-gray-700">
                                        {{ comment.text|nl2br }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <div class="mt-8 flex justify-between">
                {% if previous >= 0 %}
                    <a href="{{ path('conference', { id: conference.id, offset: previous }) }}"
                       class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-indigo-700 bg-indigo-100 hover:bg-indigo-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        ← Previous
                    </a>
                {% else %}
                    <div></div>
                {% endif %}

                {% if next < comments|length %}
                    <a href="{{ path('conference', { id: conference.id, offset: next }) }}"
                       class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-indigo-700 bg-indigo-100 hover:bg-indigo-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        Next →
                    </a>
                {% endif %}
            </div>
        {% else %}
            <div class="bg-white shadow overflow-hidden sm:rounded-lg">
                <div class="px-4 py-5 sm:p-6">
                    <p class="text-gray-500 text-center">No comments have been posted yet for this conference.</p>
                </div>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}